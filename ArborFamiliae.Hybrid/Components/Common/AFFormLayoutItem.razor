@using System.ComponentModel

<div class="mb-3 col-md-@ColSpanMd af-fli">
    <div class="col">
    <label class="form-label">
        @Caption
    </label>

    @ChildContent
</div>
</div>


@code {
    
    [Parameter]
    public string Caption { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public int ColSpanMd { get; set; } = 6;


}