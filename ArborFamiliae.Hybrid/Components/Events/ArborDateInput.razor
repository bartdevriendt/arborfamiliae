<DxTextBox @bind-Text="@Text" BindValueMode="BindValueMode.OnInput">
    <Buttons>
        <DxEditorButton IconCssClass="oi oi-pencil" Tooltip="Advanced date" Click="OnAdvancedEdit"></DxEditorButton>
    </Buttons>
</DxTextBox>

<DxPopup @bind-Visible="IsAdvancedEditorVisible">
    <BodyContentTemplate>
        This is the advanced editor
    </BodyContentTemplate>
</DxPopup>

@code {
    [Parameter]
    public string Text { get; set; }

    private bool IsAdvancedEditorVisible { get; set; }
    
    private void OnAdvancedEdit()
    {
        IsAdvancedEditorVisible = true;
    }

    private void ValidateDate()
    {
        Console.WriteLine("Validate date: " + Text);
    }

}